<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iclab.st.LoginActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/idInput"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="ID"
            android:fontFamily="@font/godo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="151dp"
            android:textSize="10pt"/>

        <EditText
            android:id="@+id/pwInput"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="PW"
            android:fontFamily="@font/godo"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/idInput"
            android:textSize="10pt"/>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pwInput"
            android:layout_alignRight="@+id/pwInput"
            android:layout_below="@+id/pwInput"
            android:layout_marginTop="51dp"
            android:fontFamily="@font/godo"
            android:text="로그인" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context="com.example.iclab.st.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/urbansys1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/idInput"
            android:text="Urbansys"
            android:fontFamily="@font/godo"
            android:textStyle="bold"
            android:textSize="55dp"
            android:backgroundTint="@color/color_drakGray"/>

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/urbansys1"
            android:layout_alignRight="@+id/urbansys1"
            android:fontFamily="@font/godo"
            android:text="로그인"
            android:textSize="30dp"
            android:backgroundTint="@color/color_drakGray"/>

        <ImageView
            android:id="@+id/idIV"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/color_lightGray"/>

        <EditText
            android:id="@+id/idInput"
            android:layout_toRightOf="@+id/idIcon"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/godo"
            android:inputType="textVisiblePassword"
            android:textSize="10pt"/>

        <ImageView
            android:id="@+id/pwIV"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/idInput"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/color_lightGray"/>

        <EditText
            android:id="@+id/pwInput"
            android:layout_toRightOf="@+id/pwIcon"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/idInput"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/godo"
            android:inputType="textPassword"
            android:textSize="10pt"/>

        <View
            android:id="@+id/idIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@id/idIV"
            android:layout_alignBottom="@id/idIV"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/id" />

        <View
            android:id="@+id/pwIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@id/pwIV"
            android:layout_alignBottom="@id/pwIV"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/password" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="65dp"
            android:text="로그인"
            android:textSize="22dp"
            android:textColor="@color/color_background"
            android:fontFamily="@font/godo"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/color_lightBlue"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
